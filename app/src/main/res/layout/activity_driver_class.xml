<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#D4E0D4"
    tools:context=".driverClass">

    <Button

        android:id="@+id/locationSharingOffButton"
        android:layout_width="136dp"
        android:layout_height="35dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="#2E7D32"
        android:text="Stop"
        android:textColor="@android:color/white"
        android:textSize="20dp">

    </Button>

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="507dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="44dp"
        mapbox:mapbox_cameraTargetLat="24.8949"
        mapbox:mapbox_cameraTargetLng="91.8687"
        mapbox:mapbox_cameraZoom="11" />

    <TextView
        android:id="@+id/sharingStatus"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#2E7D32"
        android:gravity="fill_horizontal|fill_vertical"
        android:text="                   Location Sharing : ON"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textColorHighlight="#AD1B1B"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>